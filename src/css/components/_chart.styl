.c-chart 
  &__graph 
    width 80vw
    height 70vh
  &__legend 
    p6()
    pos-rel()
    width 100%
    margin-top 40px
    g 
      blk()
    svg 
      pos-abs()
      width 100%
      margin-left 10%
      height 90px
      +md-max()
        pos-rel()
        p6()
        margin-left 0
        height initial

  &__bar 
    text 
      font-size .55em
      fill white
      font-weight bold
    rect
      opacity .5
      &:hover 
        cursor pointer
        opacity 1